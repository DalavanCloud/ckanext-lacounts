{
    "scheming_version": 1,
    "organization_type": "publishers",
    "about": "CKAN organization schema customized for the LA Counts project",
    "about_url": "http://github.com/okfn/ckanext-lacounts",
    "fields": [
        {
            "field_name": "name",
            "form_placeholder": "eg. my-publisher",
            "label": "URL",
            "preset": "dataset_slug"
        },
        {
            "field_name": "title",
            "form_placeholder": "eg. A descriptive title",
            "label": "Title",
            "preset": "title"
        },
        {
            "field_name": "description",
            "form_placeholder": "eg. Some useful notes about the publisher",
            "form_snippet": "markdown.html",
            "label": "Description"
        },
        {
            "field_name": "publisher_type",
            "help_text": "Type of the publisher to add",
            "label": "Publisher type",
            "preset": "select",
            "choices": [
                {
                    "label": "Federal",
                    "value": "federal"
                },
                {
                    "label": "State",
                    "value": "state"
                },
                {
                    "label": "Regional",
                    "value": "regional"
                },
                {
                    "label": "City",
                    "value": "city"
                },
                {
                    "label": "County",
                    "value": "county"
                },
                {
                    "label": "Private",
                    "value": "private"
                },
                {
                    "label": "Non profit",
                    "value": "nonprofit"
                }
            ]
        },
        {
            "field_name": "image",
            "form_snippet": "organization_image.html",
            "label": "Image"
        }
    ]
}

